{% extends "base.njk" %}

{% block content %}
  <article class="post">
    <div class="post-content">
      <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
          <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>{% if readingTime %}<span class="post-reading-time"> â€¢ {{ readingTime }}</span>{% endif %}
        </div>
      </header>

      <div class="post-body">
        {{ content | safe }}
      </div>

      {% if references %}
        <aside class="post-references">
          <h3>References</h3>
          {{ references | safe }}
        </aside>
      {% endif %}
    </div>
  </article>
{% endblock %} 