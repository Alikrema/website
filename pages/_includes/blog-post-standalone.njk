<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/prism.css">
</head>
<body>
    <header>
        <!-- Header content (if any) -->
    </header>

    <main>
        <article class="post">
            <div class="post-content">
                <header class="post-header">
                    <h1 class="post-title">{{ title }}</h1>
                    <div class="post-meta">
                        <!-- Debugging data availability -->
                        <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                        <!-- Manual fallback for date if filters aren't working -->
                        {% if not (page.date | readableDate) %}
                            <time>{{ date }}</time>
                        {% endif %}
                        
                        <!-- Debug reading time -->
                        <span class="post-reading-time"> â€¢ {{ content | readingTime }} read</span>
                        
                        {% if tags.length > 0 %}
                            <div class="post-tags">
                                {% for tag in tags %}
                                    {% if tag != "post" %}
                                        <span class="tag">{{ tag }}</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </header>

                <div class="post-body">
                    {{ content | safe }}
                </div>

                {% if references %}
                    <aside class="post-references">
                        <h3>References</h3>
                        {{ references | safe }}
                    </aside>
                {% endif %}
            </div>
        </article>
    </main>

    <footer>
        <!-- Footer content (if any) -->
    </footer>

    <nav class="sticky-bottom-nav">
        <ul>
            <li><a href="/" title="Home"><img id="home-icon-img" src="/assets/img/home.png" alt="Home"><span class="nav-tooltip">Home</span></a></li>
            <li><a href="/lore/" title="Lore"><img id="lore-icon-img" src="/assets/img/me.png" alt="Lore"><span class="nav-tooltip">Lore</span></a></li>
            <li><a href="/blog/" title="Blogs"><img id="blogs-icon-img" src="/assets/img/blog.png" alt="Blogs"><span class="nav-tooltip">Blogs</span></a></li>
            <li><a href="/contact/" title="Contact Me"><img id="contact-icon-img" src="/assets/img/contact.png" alt="Contact Me"><span class="nav-tooltip">Contact Me</span></a></li>
        </ul>
    </nav>

    <script src="/js/main.js"></script>
    <div id="spotlight-overlay"></div>
</body>
</html> 